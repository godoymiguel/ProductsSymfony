{% extends 'base.html.twig' %}

{% block title %}Categoria{% endblock %}

{% block body %}
    <h1>Categoria</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Codigo</th>
                <td>{{ category.code }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{ category.active ? 'Si' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index') }}">Volver a listado</a>

    <a href="{{ path('category_edit', {'id': category.id}) }}">Editar</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
